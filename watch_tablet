#!/usr/bin/env ruby
require 'yaml'

def script(name)
  scripts_dir = File.dirname File.realpath $0
  "#{scripts_dir}/#{name}"
end

def load_config!
  @config = YAML.load(File.read("#{ENV['HOME']}/.config/watch_tablet.yml"))
end

def config
  load_config! unless @config
  @config
end

def detect_accels!
  $accels = `#{script('detect_accelerometers')}`.chomp
end

def get_mode
  `#{script('detect_tablet_mode')} #$accels`.chomp
end

def activate_mode(mode)
  puts "Switching to #{mode} mode"
  if cmds = config['modes'][mode]
    cmds.each{|cmd| system cmd }
  end
end

def in_motion?
  `#{script('in_motion')}`.chomp.to_f > 0.8
end

def run_watcher
  detect_accels!
  old_mode = nil
  loop do
    new_mode = get_mode
    if old_mode != new_mode
      if in_motion?
        puts "not changing mode until motion is over"
      else
        activate_mode(new_mode)
        old_mode = new_mode
      end
    end
    sleep 0.5
  end
rescue Interrupt
end

run_watcher
